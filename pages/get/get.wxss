/* pages/get/get.wxss */
page{
  position: fixed;
  top: 0;
  left: 0;
  background: #ebebeb;
}
.place{
  width: 100%;
  height: 115rpx;
  background: #fff;
  border-top: 2rpx solid #ebebeb;
}
.place view{
  float: left;
}
.place_left{
  width: 15%;
  height: 115rpx;
}
.place_left image{
  display: block;
  margin: 19rpx auto;
  width: 35%;
  height: 60%;
}
.place_cont{
  width: 75%;
  height: 115rpx;
  box-sizing: border-box;
  padding: 10rpx;
}
.place_right{
  width: 10%;
  height: 115rpx;
}
.place_right image{
  display: block;
  margin: 20rpx auto;
  width: 25%;
  height: 40%;
}
.place_cont_false text{
  display: block;
  width: 100%;
  margin-left:45%;
  height: 115rpx;
  line-height: 115rpx;
  font-size: 30rpx;
   text-align: center;
}
.place_cont_true{
  font-size: 26rpx;
}
.sti_box{
  width: 95%;
  height: 330rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 30rpx auto;
}
.sti_box view{
  float: left;
}
.sticker_left{
  width: 40%;
  height: 330rpx;
  /* background: red; */
  box-sizing: border-box;
  padding-top: 35rpx;
}
.sticker_left image{
  display: block;
  margin: 0 auto;
  width: 80%;
  height: 85%;
}
.sticker_right{
  width: 60%;
  height: 330rpx;
  /* background: red; */
  box-sizing: border-box;
  padding: 20rpx;
}
.sticker_right view{
  margin: 10rpx 0;
  width: 100%;
}
.sticker_title{
  font-size: 46rpx;
}
.sti_fonsi{
   font-size: 36rpx;
}
.sticker_price{
  position: relative;
  font-size: 36rpx;
  color: #0400ff;
}
.sticker_num{
  position: absolute;
  top: -8rpx;
  right: 0;
}
.num_pos{
  position: absolute;
  top: -8rpx;
  height: 45rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  text-align: center;
  line-height: 45rpx;
  font-size: 36rpx;
  color: #4f4f4f;
}
.num{
  position: absolute;
  left: 30%;
  top: -8rpx;
  text-align: center;
  color: #4f4f4f;
}
.minus{
  left: 0;
}
.add{
  right: 0;
}
.reuse_line{
  display: block;
  width: 95%;
  height: 100rpx;
  border-bottom: 1px solid #b7b7b7;
  margin-left: 2.5%;
  line-height: 100rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.reuse_line text{
  float: right;
}
.total{
  display: block;
  width: 95%;
  height: 120rpx;
  margin-left: 2.5%;
  line-height: 120rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
   text-align: right;
}
.open{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  line-height: 100rpx;
  background: #fff;
}
.open_left{
  float: left;
  box-sizing: border-box;
  padding-left:8%;
}
.open_left span{
  color: #0400ff;
}
.open_right{
  width: 30%;
  height: 100rpx;
  background: #f8d832;
  float: right;
  text-align: center;
  color: #0400ff;
}

