/* pages/bindCar/bindCar.wxss */
page{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
}
.img_bi{
  width: 100%;
  height: 100%;
}
.user_box{
  width: 85%;
  background: #fff;
  margin-left: -42.5%;
  border-radius: 15rpx;
  box-sizing: border-box;
  
}
.user_img{
  height: 225rpx;
  position: absolute;
  top: 20rpx;
  left: 50%;
  padding: 50rpx 5rpx;
}
.user_left{
  float: left;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #ccc;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.user_right{
  width: 78%;
  height: 120rpx;
  float: right;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  color: #606060;
}
.user_text{
  height: 270rpx;
  position: absolute;
  top: 280rpx;
  left: 50%;
}
.car_box{
  width: 90%;
  height: 90rpx;
  /* background: green; */
  margin: 0 auto;
  line-height: 90rpx;
  font-size: 28rpx;
}
.car_mark{
  position: relative;
}
.drop_down{
  width: 90rpx;
  height: 40rpx;
  background: blue;
  /* position: relative; */
  position: absolute;
  top: 26rpx;
  left: 130rpx;
}
.drop_down image{
  display: block;
  width: 100%;
  height: 100%;
}
.drop_box{
  width: 100%;
  height: 100%;
  /* background: green; */
  position: absolute;
  top: 0;
  left: 0;
}

.select_box{
  background: rgba(0,0,0,0);
  width: 100%;
  /* margin: 30rpx auto; */
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 40rpx;
  /* border:1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  /* padding: 0 20rpx; */
}
.select_text{
  font-size: 30rpx;
  flex: 1;
  color:#fff;
}
.option_box{
  position: absolute;
  top: 39rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 9;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}
/* 车牌 */
.u_t_carMark{
  width: 60%;
  height: 90rpx;
  /* background: red; */
  float: right;
}
.u_t_carMark input{
  width: 100%;
  height: 90rpx;
  font-size: 36rpx;
  color: #333;
}
/* 电话号 */
.phone_mark view{
  width: 78%;
  height: 90rpx;
  float: right;
}
.phone_mark view input{
  width: 100%;
  height: 90rpx;
  font-size: 36rpx;
  color: #333; 
}
/* 验证码 */
.code_but{
  width: 20%;
  height: 45rpx;
  background: #4989e4;
  float: right;
  margin-right: 20rpx;
  text-align: center;
  line-height: 45rpx;
  color: #fff;
  border-radius: 8rpx;
  margin-top:24rpx;

}
.code_mark{
  width: 54%;
  height: 90rpx;
  float: right;
}
.code_mark input{
  width: 100%;
  height: 90rpx;
  font-size: 36rpx;
  color: #333; 
}
/* 立即开启 */
.user_but{
  height: 85rpx;
  position: absolute;
  top: 53%;
  left: 50%;
  background: #f8d934;
  box-shadow: 6rpx 6rpx 6rpx #333;
  text-align: center;
  line-height: 85rpx;
  color: #2f53bc;
}
